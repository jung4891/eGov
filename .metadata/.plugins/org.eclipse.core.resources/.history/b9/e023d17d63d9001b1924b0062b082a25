<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="egovframework.example.myboard.service.impl.MyBoardMapper">

	<resultMap id="myboard" type="egovframework.example.myboard.service.MyBoardVO">
		<result property="idx" column="idx"/>
		<result property="title" column="title"/>
		<result property="contents" column="contents"/>
		<result property="count" column="count"/>
		<result property="writer" column="writer"/>
		<result property="writerNm" column="writerNm"/>
		<result property="indate" column="indate"/>
	</resultMap>

	<insert id="insertMyBoard" parameterType="myboardVO">

			INSERT INTO TB_BOARD
				( IDX
				  , TITLE
				  , CONTENTS
				  , count
				  , writer 
				  , indate )
			VALUES ( #{idx, jdbcType=VARCHAR}
				  , #{title, jdbcType=VARCHAR}
				  , #{contents, jdbcType=VARCHAR}
				  , #{count, jdbcType=VARCHAR}
				  , #{writer, jdbcType=VARCHAR}
				  , SYSDATE() )

	</insert>

	<update id="updateMyBoard">

			UPDATE tb_board
			SET title=#{title, jdbcType=VARCHAR}
				, contents=#{contents, jdbcType=VARCHAR}
				  WHERE idx=#{idx}

	</update>

	<delete id="deleteMyBoard">

			DELETE FROM tb_board
			WHERE idx=#{idx}

	</delete>

	<select id="selectMyBoard" resultMap="myboard">

			SELECT
				A.idx
				, A.title
				, A.contents
				, A.count
				, A.writer
				, A.indate
				, B.user_name as writerNm
			FROM 
				tb_board A 
			LEFT JOIN 
				tb_user B
			ON
				A.writer = B.user_id 
			WHERE A.idx=#{idx}

	</select>

	<select id="selectMyBoardList" parameterType="myboardVO" resultType="egovMap">
	
			SELECT
				A.idx
				, A.title
				, A.contents
				, A.count
				, A.writer
				, A.indate
				, B.user_name as writerNm
			FROM tb_board A
			WHERE 1=1
			<if test="searchKeyword != null and searchKeyword != ''">
		        <choose>
		            <when test="searchCondition == 0">
						AND	ID LIKE '%' || #{searchKeyword} || '%'
					</when>
		            <when test="searchCondition == 1">
						AND	NAME LIKE '%' || #{searchKeyword} || '%'
					</when>
				</choose>
			</if>
			ORDER BY ID ASC
			LIMIT #{recordCountPerPage} OFFSET #{firstIndex}
	</select>

	<select id="selectMyBoardListTotCnt" parameterType="myboardVO" resultType="int">

			SELECT COUNT(*) totcnt
			FROM tb_board
			WHERE 1=1
			<if test="searchKeyword != null and searchKeyword != ''">
		        <choose>
		            <when test="searchCondition == 0">
						AND ID LIKE '%' || #{searchKeyword} || '%'
					</when>
		            <when test="searchCondition == 1">
						AND	NAME LIKE '%' || #{searchKeyword} || '%'
					</when>
				</choose>
			</if>
	</select>

</mapper>